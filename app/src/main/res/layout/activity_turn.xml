<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.defsin.myapplication.TurnPicker">



    <TextSwitcher
        android:id="@+id/turnSwitcher"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="150dp"
        android:layout_above="@+id/turnButton"
        android:background="@drawable/turnbackground"/>

    <Button
        android:id="@+id/turnButton"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="@string/turnText"
        android:textSize="20dp"
        android:onClick="clickTurnButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:textColor="@android:color/white"
        android:background="@drawable/points_buttbg_color"/>

</RelativeLayout>
